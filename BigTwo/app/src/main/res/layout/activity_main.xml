<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg_xuehua"
    tools:context="com.yuyife.bigtwo.MainActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/home_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/home_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_head" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/home_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="3"
                android:text="yuyife"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="3"
                android:text="ID:154234"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/z_bi_72" />

                <TextView
                    android:id="@+id/home_jinbi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="bottom|center"
                    android:text="44"
                    android:textColor="#ecac0b" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/home_add_jinbi"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/add_bi_selector" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9dccaa11" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/home_biaoti_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_biaoti_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/home_biaoti" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_zhanji"
            style="@style/HomeBtnStyle"
            android:background="@drawable/zhanji_selector" />

        <Button
            android:id="@+id/home_bangzhu"
            style="@style/HomeBtnStyle"
            android:background="@drawable/bangzhu_selector" />

        <Button
            android:id="@+id/home_shezhi"
            style="@style/HomeBtnStyle"
            android:background="@drawable/shezhi_selector" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/home_gonggao_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_biaoti_layout"
        android:layout_marginTop="50dp"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:paddingLeft="80dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/home_laba" />

        <TextView
            android:id="@+id/home_gonggao_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="加盟代理联系微信yuyife"
            android:textColor="@color/white" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_gonggao_layout"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_join_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/join_game_selector" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_create_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/create_game_selector" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
